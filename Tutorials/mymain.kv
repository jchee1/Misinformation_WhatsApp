#Filename mymain.kv 

<MyGrid>:

    #Global variable  references the id
    name: name 
    phone: phone 

    GridLayout:
        cols:1
        size: root.width - 200, root.height - 200
        pos: 100, 100
    
        GridLayout:
            cols:2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline:False
            
            Label:
                text: "Phone: "
            TextInput:
                id: phone
                multiline:False
        Button:
            text:"Submit"
            on_press:root.btn()

<Touch>
    btn: btn

    Button:
        id: btn
        text: "My Btn"
        
<Button>
    font_size: 40
    color: 0.1, 0.5, 0.6, 1
    size_hint: 0.5, 0.5
<FloatLayout>:
    Button:
        text: "hello"
        pos_hint: {"x":0.5, "top":1}
    Button:
        text: "bye"


        
        
